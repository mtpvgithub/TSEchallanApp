    android:thickness="0dp">

    <padding
        android:bottom="12dp"
        android:left="12dp"
        android:right="12dp"
        android:top="12dp" />

    <stroke
        android:width="0.05dp"
        android:color="@color/contact_number" />

    <corners android:radius="5dp" />

    <gradient
        android:angle="270"
        android:centerColor="#ffffff"
        android:endColor="#ffffff"
        android:startColor="#ffffff"
        android:type="linear" />

</shape>
