<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:thickness="0dp">

    <padding
        android:bottom="6dp"
        android:left="12dp"
        android:right="12dp"
        android:top="6dp" />

    <stroke
        android:width="0dp"
        android:color="@color/colorWhite" />

    <corners android:radius="2dp" />

    <gradient
        android:angle="180"
        android:centerColor="@color/colorPrimaryMuchLight"
        android:endColor="@color/colorPrimaryTooLight"
        android:startColor="@color/colorWhite"
        android:type="linear" />

</shape>
