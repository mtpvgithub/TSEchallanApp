<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <Spinner
        android:id="@+id/spinner_amount"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/spinner_amount"
        android:layout_toRightOf="@id/spinner_amount"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_violation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cell phone driving"
            android:textSize="16sp"
            android:textColor="#000000"
            app:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tv_vio_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S 184"
            android:textSize="12sp" />

    </LinearLayout>

    <!--<CheckBox
        android:id="@+id/violation_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>-->

</RelativeLayout>